/**app.wxss**/
@import 'style/weui.wxss';

page {
  height: 100%;
}

.container {
  min-height: 100%;
  box-sizing: border-box;
  background: #efeff4;
  padding-top: 1px;
} 

view,image,text,navigator {
  box-sizing: border-box;
}

.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

button[type=primary] {
  color:#FFFFFF;
  background-color:#2395fd;
}

.weui-vcode-btn {
  color:#2395fd;
}

.weui-cells:before{top:0;border-top:1rpx solid transparent}

.weui-cells:after{bottom:0;border-bottom:1rpx solid transparent}

.weui-select {  
  border-right:1rpx solid transparent;
}

.weui-form-preview {
  margin-bottom:25px;
}
